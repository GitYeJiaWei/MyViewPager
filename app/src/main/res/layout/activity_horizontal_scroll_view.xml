<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.yjw.HorizontalScrollView.HorizontalScrollViewActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/listheader"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/G2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtIndex"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="序号"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="收货单位"
                    android:textSize="@dimen/name1"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="车号"
                    android:textSize="@dimen/name1"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="车次"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="毛重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="皮重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="净重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="扣重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="实重"
                    android:textColor="@color/white"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="金额"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/name1"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="过磅费"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/name1"/>
            </LinearLayout>
            <ListView
                android:layout_below="@+id/listheader"
                android:layout_above="@+id/listfooter"
                android:id="@+id/listView01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="1dp"
                android:divider="#f7f7f7"></ListView>
            <LinearLayout
                android:id="@+id/listfooter"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="合计"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtConsigee"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtGoods"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtCarNum"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="车次"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtGross"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="毛重"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtTare"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="皮重"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtNet"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="净重"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtBuckle"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="扣重"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtActure"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="实重"
                    android:gravity="center"
                    android:textSize="@dimen/name1" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtSumPrice"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="金额"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EDEDED"></View>
                <TextView
                    android:id="@+id/txtWeightFree"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="过磅费"
                    android:textSize="@dimen/name1"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>
</RelativeLayout>
